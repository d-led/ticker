	@${MAKE} --no-print-directory -C . -f pplx.make config=$(pplx_config)
endif

ppl_example: pplx
ifneq (,$(ppl_example_config))
	@echo "==== Building ppl_example ($(ppl_example_config)) ===="
	@${MAKE} --no-print-directory -C . -f ppl_example.make config=$(ppl_example_config)
endif

